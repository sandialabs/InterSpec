    #define USING_ELECTRON_NATIVE_MENU 1
  #else
    #define USING_ELECTRON_NATIVE_MENU 0
  #endif

  #if( USE_ELECTRON_HTML_MENU )
    #define USING_ELECTRON_HTML_MENU 1
  #else
    #define USING_ELECTRON_HTML_MENU 0
  #endif
#else
  #define USING_ELECTRON_NATIVE_MENU 0
  #define USING_ELECTRON_HTML_MENU 0
#endif


